<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content.aside">
            <!-- load the module page to shopping cart page -->
            <block class="Magento\Framework\View\Element\Template" name="split_x_price" template="MarioSAM_SplitPrice::x_cart.phtml" before="-" ifconfig="splitprice/split_price_presentation/show_cart">
                <arguments>
                    <argument name="view_model" xsi:type="object">MarioSAM\SplitPrice\ViewModel\SplitPriceViewModel</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
